{
    "$schema": "https://raw.githubusercontent.com/FLECS-Technologies/app-sdk/main/manifest.schema.json",
    "_schemaVersion": "2.0.0",
    "app": "com.vnodeautomation.vnode",
    "version": "##VERSION##",
    "revision": "0",
    "image": "flecs.azurecr.io/com.vnodeautomation.vnode",
    "multiInstance": false,
    "editor": ":8005",
    "env": [
        "ADMIN_PASSWORD=admin",
        "USER_PASSWORD=vnode"
    ],
    "ports": [
        "3002:3001"
    ],
    "volumes": [
        "config:/opt/vnode/config",
        "data:/opt/vnode/data",
        "licenses:/opt/vnode/licenses",
        "log:/opt/vnode/log"
    ]
}
